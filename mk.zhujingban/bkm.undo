#!/bin/sh

echo ">>>>>>>>>>>>>>>>>>>>> bkm.undo <<<<<<<<<<<<<<<<<<<<<<<<<"
pwd
echo ">>>>>>>>>>>>>>>>>>>>> bkm.undo <<<<<<<<<<<<<<<<<<<<<<<<<"

BLD_TYPE=`cat .bld_type 2> /dev/null`
CFG_TYPE=`cat .cfg_type 2> /dev/null`

BIN_DIR=../${BLD_TYPE}_${CFG_TYPE}/target

bkm_TARGET_DIR=$1

help_and_exit() {
    echo "bkm.undo TargetDir"
    echo "  TargetDir : bld_all_cab/target etc"
    echo "  .bld_type : put the BUILD_TYPE to this file"
    echo "  .cfg_type : put the CONFIG_TYPE to this file"
    exit
}

uninst_ntvapps() {
    #2. Move ntvapp.otvorig to ntvapp
    echo "Restore all *.otvorig files"
    find ${bkm_TARGET_DIR} -name "*.otvorig" -exec rename -f 's/.otvorig//g' {} \;
}

if [ ! -e .bld_type ]; then
    help_and_exit
fi
if [ ! -e .cfg_type ]; then
    help_and_exit
fi

uninst_ntvapps
